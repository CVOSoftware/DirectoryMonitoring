<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:local="clr-namespace:DirectoryMonitoring.Studio.Resource">
    <Style x:Key="Style/MainWindow" TargetType="{x:Type metro:MetroWindow}">
        <Setter Property="WindowState" Value="Maximized"/>
        <Setter Property="TitleCaps" Value="False"/>
        <Setter Property="IconTemplate" Value="{StaticResource DataTemplate/MainWindow/Icon}"/>
    </Style>
</ResourceDictionary>